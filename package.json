{
  "name": "financemanagerdesktop",
  "version": "1.0.0",
  "description": "Finance Manager Desktop App",
  "main": "backend/dist/index.js",
  "scripts": {
    "build": "cd frontend && npm run build && cd ../backend && tsc",
    "fe": "cd frontend && npm run dev",
    "be": "cd backend && npm run start",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.patriks.finance-manager",
    "productName": "FinanceManager",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^18.17.0",
    "concurrently": "^9.1.2",
    "electron-builder": "^24.13.3",
    "typescript": "^5.7.2"
  },
  "author": "Patriks",
  "license": "ISC"
}
